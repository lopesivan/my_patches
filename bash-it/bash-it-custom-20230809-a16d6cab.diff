+  local opt_del_after=""
+  local maxsize=""
+  local lossiness=""
+  local maxwidthski=""
+  local giftagopt=""
+  local giftag=""
+  local defaultfps=10
+  local infps=""
+  local fps=""
+  local make_webm=""
+  local alert=5000
